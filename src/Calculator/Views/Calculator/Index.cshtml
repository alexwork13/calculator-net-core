<center>
    <p>&nbsp</p>
    <form asp-area="" asp-controller="Calculator" asp-action="Index" method="post">
        <div class="form-group">
            <label for="hasil">Hasil</label>
            <input name="hasil" type="text" readonly value="@ViewData["Hasil"]" class="form-control">
        </div>
        <div class="form-group">
            <label for="p1">Bilangan I</label>
            @if (!(bool)ViewData["I"])
            {
                <input type="number" name="p1" class="form-control" placeholder="Angka Pertama" step="any" value="@ViewData["Hasil"]" required />
            }
            @if((bool) ViewData["I"]){ 
                <input type="number" name="p1" class="form-control" placeholder="Angka Pertama" step="any" required />
            }
            
        </div>
        <div class="form-group">
            <label for="op">Operator</label>
            <select name="op" class="form-control" required>
                <option value="+">+</option>
                <option value="-">-</option>
                <option value="*">*</option>
                <option value="/">/</option>
                <option value="%">MOD</option>
                <option value="^">^</option>
            </select>
        </div>
        <div class="form-group">
            <label for="p2">Bilangan II</label>
            <input type="number" name="p2" class="form-control" placeholder="Angka Kedua" step="any" required />
        </div>
        <button type="submit" class="btn btn-success">Hitung</button>
    </form>
</center>
